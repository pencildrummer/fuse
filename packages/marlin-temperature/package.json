{
  "name": "@fuse-labs/marlin-temperature",
  "description": "Temperature monitor plugin for FUSE for Marlin-based devices",
  "version": "1.0",
  "author": "Fabio Borella",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "dist-client",
    "lib/server"
  ],
  "main": "./lib/server/index.js",
