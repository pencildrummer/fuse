  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${file}"
    },
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "yarn client:dev"
    },
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "Next.js: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "yarn client:dev",
      "internalConsoleOptions": "openOnSessionStart",
      "serverReadyAction": {
        "pattern": "Client started on (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "HOST - Attach",
      "type": "node",
      // "command": "yarn host:dev","
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "processId": "${command:PickProcess}"
    },
    {
      "name": "HOST - Build",
      "type": "node-terminal",
      "request": "launch",
      "command": "yarn host:build"
    },
    // {
    //   "name": "HOST - Launch",
    //   //"type": "node-terminal",
    //   //"command": "yarn workspace host start",
    //   "type": "node",
    //   "runtimeExecutable": "yarn",
    //   "runtimeArgs": ["workspace", "host", "node"],
    //   "program": "./dist/server.js",
    //   "request": "launch",
    //   "preLaunchTask": "npm: host:build",
    //   "cwd": "${workspaceFolder}/apps/host",
    //   "skipFiles": ["<node_internals>/**"],
    //   "outFiles": [
    //     "${workspaceFolder}/apps/host/dist/**/*.js",
    //     "${workspaceFolder}/packages/**/*.js",
    //     "${workspaceFolder}/plugins/**/*.js",
    //     "!**/node_modules/**"
    //   ]
    // },
    {
      "name": "HOST - Launch",
      //"type": "node-terminal",
      //"command": "yarn workspace host start",
      "type": "node",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["workspace", "host", "node"],
      "program": "./dist/server.js",
      "request": "launch",
      "preLaunchTask": "npm: host:build",
      "cwd": "${workspaceFolder}/apps/host",
      "skipFiles": ["<node_internals>/**"],
      "outputCapture": "std", // Probably console not working because console is overriden by logger, check threadExit
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "outFiles": [
        "${workspaceFolder}/apps/host/dist/**/*.js",
        "${workspaceFolder}/packages/**/*.js",
        "${workspaceFolder}/plugins/**/*.js",
        "!**/node_modules/**"
      ]
    }
  ]
}
